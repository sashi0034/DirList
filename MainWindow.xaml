<Window x:Class="DirList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirList" xmlns:views="clr-namespace:DirList.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Views/MainWindowResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource NormalDark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Border BorderThickness="1"  BorderBrush="AliceBlue"/>

            <ScrollViewer Background="{StaticResource DrakDark}">
                <StackPanel x:Name="panelDirList">
                    <!--<views:DirLineElement/>-->
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="1" Margin="10">
            <Button x:Name="buttonAdd" Style="{StaticResource FlatButton}" Background="{StaticResource LightDark}" Click="buttonAdd_Click"/>
        </Grid>

    </Grid>
</Window>
